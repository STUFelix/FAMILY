<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TextView
        android:text="修改密码界面"
        android:textSize="30sp"
        android:textColor="@color/gray"
        android:id="@+id/sign_up_forED_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_forED_position"

        android:id="@+id/sign_up_forBT_position"

        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"

        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/old_password"
            android:hint="原始密码"
            android:textSize="16sp"

            android:textColor="#2F4F4F"
            android:background="@drawable/textview_border"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/new_password"
            android:hint="新密码"
            android:textSize="16sp"

            android:maxLength="16"
            android:maxLines="1"

            android:textColor="#2F4F4F"
            android:layout_marginTop="15dp"
            android:background="@drawable/textview_border"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/new_password_again"
            android:hint="确认密码"
            android:textSize="16sp"

            android:maxLength="16"
            android:maxLines="1"

            android:textColor="#2F4F4F"
            android:layout_marginTop="15dp"
            android:background="@drawable/textview_border"
            />

    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/sign_up_forBT_position"

        android:id="@+id/update_back"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"

        android:text="返回"/>

    <Button
        android:id="@+id/update_confirm"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/update_back"
        android:layout_toRightOf="@+id/update_back"
        android:layout_marginLeft="30dp"

        android:text="确定" />




</RelativeLayout>