<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TextView
        android:text="注册界面"
        android:textSize="30sp"
        android:textColor="#DC143C"
        android:id="@+id/sign_up_forED_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/sign_up_forED_position"

        android:id="@+id/sign_up_forBT_position"

        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"

        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/sign_up_account"
            android:hint="注册账号"
            android:textSize="16sp"

            android:textColor="#2F4F4F"
            android:background="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/sign_up_password"
            android:hint="原始密码"
            android:textSize="16sp"

            android:maxLength="16"
            android:maxLines="1"

            android:textColor="#2F4F4F"
            android:background="#FFFFFF"
            />

    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/sign_up_forBT_position"

        android:id="@+id/sign_up_back"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"

        android:text="返回登录界面"/>

    <Button
        android:id="@+id/sign_up_confirm"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/sign_up_back"
        android:layout_toRightOf="@+id/sign_up_back"
        android:layout_marginLeft="30dp"

        android:text="确定" />




</RelativeLayout>