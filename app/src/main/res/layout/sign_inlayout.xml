<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TextView
        android:text="登录界面"
        android:textSize="30sp"
        android:textColor="#2F4F4F"
        android:id="@+id/sign_in_forED_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/sign_in_forED_position"

        android:id="@+id/sign_in_forBT_position"

        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="14dp"

        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/sign_in_account"
            android:hint="账号"
            android:textSize="16sp"

            android:textColor="#2F4F4F"
            android:background="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:id="@+id/sign_in_password"
            android:hint="密码"
            android:textSize="16sp"

            android:maxLength="16"
            android:maxLines="1"

            android:textColor="#2F4F4F"
            android:background="#FFFFFF"
            />

    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/sign_in_forBT_position"

        android:id="@+id/sign_in_sign_up"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"

        android:text="注册"/>

    <Button
        android:id="@+id/sign_in_sign_in"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/sign_in_sign_up"
        android:layout_toRightOf="@+id/sign_in_sign_up"
        android:layout_marginLeft="30dp"

        android:text="登录" />




</RelativeLayout>